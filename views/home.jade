extends layout

block content
  h1
    i.fa.fa-file-pdf-o
    |  Upload an Indenture or OM in PDF
  hr
  form#uploadForm(enctype="multipart/form-data", action="/docupload", method="post")
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      input(type="file", id="docUploadFilename", name="docFilename")
    button.btn.btn-primary(type="submit")
      i.fa.fa-cloud-upload
      | Upload

  br
  #uploadProgressDiv.hidden
    img(src="ajax-loader.gif")
    |  Uploading your PDF
  
block javascript
  script.
    $('#uploadForm').submit(function() { $('#uploadProgressDiv').removeClass('hidden'); });